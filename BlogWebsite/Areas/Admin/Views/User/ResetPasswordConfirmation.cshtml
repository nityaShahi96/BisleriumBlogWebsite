@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "ResetPassword Confirmation";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">ForgotPasswordConfirmation</h3></div>
                <div class="card-body">
                    <p>
                        Your password has been reset. Please <a asp-controller="User" asp-action="Login" asp-area="Admin">click here to Log in</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>